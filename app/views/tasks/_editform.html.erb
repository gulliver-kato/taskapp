<%= form_with(model: task, local: true) do |form| %>
    <% if task.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

            <ul>
                <% task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class="field">
        <%= form.label :content %>
        <%= form.text_area :content %>
    </div>

    <div class="field">
        <%= form.label :end_date %>
        <%= form.date_select :end_date %>
    </div>

    <div class="field">
        <%= form.label :priority %>
        <%# <%= form.number_field :priority %> 
        <%= form.select :priority, [["高","高"], ["中","中"], ["低","低"]], include_blank: "選択して下さい" %>
    </div>

    <div class="field">
        <%= form.label :status %>
        <%# <%= form.number_field :status %>
        <%= form.select :status, [["完了","完了"], ["着手中","着手中"], ["未着手","未着手"]], include_blank: "選択して下さい" %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>